        <item name="android:textStyle">bold</item>
    </style>
    <style name="boldUpShadowedText" parent="upShadowedText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="boldShadowedWhiteText" parent="shadowedWhiteText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="grayShadowedText" parent="shadowedText">
        <item name="android:textColor">#999</item>
    </style>
    <style name="grayUpShadowedText" parent="upShadowedText">
        <item name="android:textColor">#999</item>
    </style>
    <style name="lightGrayShadowedText" parent="shadowedText">
        <item name="android:textColor">#ccc</item>
    </style>
    <style name="darkGrayBoldShadowedText" parent="boldShadowedWhiteText">
        <item name="android:textColor">#333</item>
    </style>
    <style name="darkGrayShadowedText" parent="shadowedWhiteText">
        <item name="android:textColor">#333</item>
    </style>
